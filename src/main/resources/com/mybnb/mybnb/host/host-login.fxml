<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mybnb.mybnb.host.HostLogin">
    <children>
        <Label layoutX="145.0" layoutY="40.0" text="Hello! Enter your info to get into the system">
            <font>
                <Font name="Helvetica Neue" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="firstName" layoutX="220.0" layoutY="146.0" onAction="#handleFirstNameTextField" promptText="First Name" />
        <TextField fx:id="lastName" layoutX="220.0" layoutY="189.0" onAction="#handleLastNameTextField" promptText="Last Name" />
        <TextField fx:id="sinNumber" layoutX="220.0" layoutY="228.0" onAction="#handleSinNumberTextField" promptText="SIN #" />
        <Button fx:id="submitBtn" layoutX="272.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleSubmitBtnClick" text="Submit" />
        <Text fx:id="errorText" fill="#bf0000" layoutX="139.0" layoutY="99.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font name="Helvetica Neue" size="14.0" />
            </font>
        </Text>
      <Button fx:id="backBtn" layoutX="20.0" layoutY="38.0" mnemonicParsing="false" onAction="#handleBackBtnClick" text="Back" />
    </children>
</AnchorPane>
